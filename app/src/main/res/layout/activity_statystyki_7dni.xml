<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E1640"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="start"
            android:src="@drawable/arrowback"
            android:contentDescription="Wstecz"
            app:tint="@android:color/white" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/bear_moon"
            android:contentDescription="Logo"
            app:tint="@android:color/white"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/textNaglowek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Twoje statystyki z ostatnich 7 dni :)"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_marginTop="12dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Średnia długość snu"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/sredniaSnu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Średnia długość drzemek"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/sredniaDrzemek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Średnia ilość pobudek"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/sredniaPobudek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Średnia jakość snu"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/sredniaJakosci"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PODSUMOWANIE"
            android:textColor="#FFFF99"
            android:textSize="22sp"
            android:layout_marginTop="24dp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Czynniki wpływające na Twój sen w tym tygodniu:"
            android:textColor="#000000"
            android:textStyle="bold"
            android:background="@drawable/rounded_box_yellow"
            android:padding="12dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/textAlkohol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="W ciągu ostatnich 7 dni piłeś/aś alkohol X razy."
            android:padding="16dp"
            android:textColor="@android:color/white"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_box_dark" />

        <TextView
            android:id="@+id/textKofeina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spożywałeś/aś napoje z kofeiną po 18:00 X razy."
            android:padding="16dp"
            android:textColor="@android:color/white"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_box_dark" />

        <TextView
            android:id="@+id/textPosilek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zjadłeś/aś późny posiłek X razy."
            android:padding="16dp"
            android:textColor="@android:color/white"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_box_dark" />

        <TextView
            android:id="@+id/textTelefon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Korzystałeś/aś z telefonu przed snem X razy."
            android:padding="16dp"
            android:textColor="@android:color/white"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_box_dark" />

        <TextView
            android:id="@+id/textAktywnosc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Uprawiałeś/aś aktywność fizyczną X razy."
            android:padding="16dp"
            android:textColor="@android:color/white"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_box_dark" />

        <TextView
            android:id="@+id/textWyciszenie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Praktykowałeś/aś wyciszenie przed snem X razy."
            android:padding="16dp"
            android:textColor="@android:color/white"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_box_dark" />

        <TextView
            android:id="@+id/textWnioski"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jeśli zauważyłeś/aś poprawę..."
            android:padding="16dp"
            android:textColor="#000000"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_box_yellow" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/bear_moon"
            android:layout_marginTop="20dp"
            android:contentDescription="Misiek" />

    </LinearLayout>
</ScrollView>
